<%- include('partials/header') %>

<div class="container">
  <div class="jumbotron centered">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secretify</h1>
    <p class="secret-text">Don't keep your secrets, share them anonymously!</p>
    <p class="secret-text-sub">No hate only surprises!</p>

    <form action="/submit" method="POST">

      <div class="form-group">
        <input type="text" class="form-control text-center" name="secret" placeholder="What's your secret?">
      </div>
      
      <p class="secret-text-sub">This action cannot be undone!</p>

      <button type="submit" class="btn btn-dark">Submit</button>
    </form>

  </div>
</div>
